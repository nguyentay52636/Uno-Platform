<UserControl x:Class="Uno_Platform.Components.CategoriesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="using:Uno_Platform.Models">

  <StackPanel Spacing="8">
    <TextBlock Text="Danh má»¥c"
               FontSize="16"
               FontWeight="SemiBold"
               Foreground="#D68910"/>
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Disabled"
                  HorizontalScrollMode="Auto">
      <ItemsControl x:Name="CategoriesItemsControl">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal" Spacing="8"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate x:DataType="models:CategoryWithCount">
            <Button Click="CategoryButton_Click"
                    Tag="{x:Bind Name}"
                    Style="{StaticResource NoHoverCategoryButtonStyle}">
              <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="{x:Bind Name, Mode=OneWay}" 
                           VerticalAlignment="Center"
                           Foreground="#D68910"
                           FontSize="13"
                           FontWeight="SemiBold"/>
                <Border Background="#D68910"
                        CornerRadius="9"
                        Padding="6,2"
                        MinWidth="22"
                        VerticalAlignment="Center">
                  <TextBlock Text="{x:Bind Count, Mode=OneWay}"
                             Foreground="White"
                             FontSize="11"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"/>
                </Border>
              </StackPanel>
            </Button>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </StackPanel>
</UserControl>
