<UserControl x:Class="Uno_Platform.Components.Pagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <UserControl.Resources>
    <!-- Nav Button Style -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#3D5A5B"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="10"/>
      <Setter Property="Padding" Value="16,10"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <!-- Page Number Button Style -->
    <Style x:Key="PaginationButtonStyle" TargetType="Button"> 
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="#3D5A5B"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Width" Value="36"/>
      <Setter Property="Height" Value="36"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Active Page Button Style -->
    <Style x:Key="ActivePageButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#3D5A5B"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Width" Value="36"/>
      <Setter Property="Height" Value="36"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
  </UserControl.Resources>

  <!-- Simple Mobile Pagination -->
  <Grid HorizontalAlignment="Center">
    <StackPanel Orientation="Horizontal" 
                Spacing="12"
                VerticalAlignment="Center">
      
      <!-- Previous Button -->
      <Button x:Name="PrevButton"
              Style="{StaticResource NavButtonStyle}"
              Click="PrevPage_Click">
        <StackPanel Orientation="Horizontal" Spacing="6">
          <FontIcon Glyph="&#xE76B;" FontSize="16"/>
          <TextBlock Text="Trước" VerticalAlignment="Center"/>
        </StackPanel>
      </Button>

      <!-- Page Info Badge -->
      <Border Background="#F0F7F7"
              CornerRadius="12"
              Padding="16,10"
              BorderThickness="2"
              BorderBrush="#3D5A5B"
              VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="6">
          <FontIcon Glyph="&#xE7C3;" FontSize="14" Foreground="#3D5A5B"/>
          <TextBlock FontSize="14"
                     FontWeight="Bold"
                     Foreground="#3D5A5B"
                     VerticalAlignment="Center">
            <Run x:Name="CurrentRangeText" Text="1-5"/>
            <Run Text=" / "/>
            <Run x:Name="TotalItemsText" Text="20"/>
          </TextBlock>
        </StackPanel>
      </Border>

      <!-- Next Button -->
      <Button x:Name="NextButton"
              Style="{StaticResource NavButtonStyle}"
              Click="NextPage_Click">
        <StackPanel Orientation="Horizontal" Spacing="6">
          <TextBlock Text="Sau" VerticalAlignment="Center"/>
          <FontIcon Glyph="&#xE76C;" FontSize="16"/>
        </StackPanel>
      </Button>
      
    </StackPanel>
    
    <!-- Hidden elements for compatibility -->
    <StackPanel x:Name="PageNumbersPanel" Visibility="Collapsed"/>
    <Button x:Name="FirstPageButton" Visibility="Collapsed" Click="FirstPage_Click"/>
    <Button x:Name="LastPageButton" Visibility="Collapsed" Click="LastPage_Click"/>
    <TextBox x:Name="PageJumpTextBox" Visibility="Collapsed" KeyDown="PageJump_KeyDown"/>
  </Grid>
</UserControl>
