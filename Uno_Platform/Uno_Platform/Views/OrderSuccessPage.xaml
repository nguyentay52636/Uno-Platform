<Page x:Class="Uno_Platform.Views.OrderSuccessPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Uno_Platform.Views"
      xmlns:vm="using:Uno_Platform.ViewModels"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Spacing="24"
                    MaxWidth="400">
            
            <!-- Success Icon -->
            <Border Width="100" Height="100" 
                    CornerRadius="50" 
                    Background="#367419"
                    HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE73E;"
                          FontSize="50"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>

            <TextBlock Text="Đặt hàng thành công!" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>

            <TextBlock Text="Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đang được xử lý." 
                       FontSize="16" 
                       Foreground="{ThemeResource SystemBaseMediumColor}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>

            <Button Command="{x:Bind ViewModel.ContinueShoppingCommand}"
                    Content="Tiếp tục mua sắm"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Center"
                    Padding="32,12"
                    FontSize="16"
                    Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
