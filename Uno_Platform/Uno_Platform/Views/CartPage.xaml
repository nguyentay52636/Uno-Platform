<Page x:Class="Uno_Platform.Views.CartPage"
      x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="using:Uno_Platform.Components"
      xmlns:models="using:Uno_Platform.Models"
      xmlns:converters="using:Uno_Platform.Converters"
      Background="#F5F5F5">
  
  <Page.Resources>
    <Storyboard x:Name="PageEnterAnimation">
      <DoubleAnimation Storyboard.TargetName="ContentGrid"
                      Storyboard.TargetProperty="Opacity"
                      From="0" To="1"
                      Duration="0:0:0.3"/>
    </Storyboard>
  </Page.Resources>

  <Grid x:Name="ContentGrid" Opacity="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <!-- Header -->
    <Border Grid.Row="0"
            Background="White"
            Padding="16"
            BorderThickness="0,0,0,1"
            BorderBrush="#E8E8E8">
      <Grid ColumnDefinitions="Auto,*,Auto">
        <Button Grid.Column="0"
                Style="{StaticResource NoHoverIconButtonStyle}"
                Command="{x:Bind ViewModel.GoBackCommand}">
          <FontIcon Glyph="&#xE72B;" FontSize="20" Foreground="#367419"/>
        </Button>
        
        <StackPanel Grid.Column="1" Margin="12,0">
          <TextBlock Text="ðŸ›’ Giá» hÃ ng"
                     FontSize="20"
                     FontWeight="Bold"
                     Foreground="#367419"/>
          <TextBlock Text="{x:Bind ViewModel.TotalItemsFormatted, Mode=OneWay}"
                     FontSize="13"
                     Foreground="#666"/>
        </StackPanel>
        
        <Button Grid.Column="2"
                Content="XÃ³a táº¥t cáº£"
                Style="{StaticResource NoHoverDeleteButtonStyle}"
                FontSize="13"
                Command="{x:Bind ViewModel.ClearCartCommand}"/>
      </Grid>
    </Border>

    <!-- Cart Items List -->
    <ScrollViewer Grid.Row="1" 
                  Padding="12"
                  VerticalScrollBarVisibility="Auto">
      <Grid>
        <!-- Items List -->
        <ItemsControl ItemsSource="{x:Bind ViewModel.CartItems, Mode=OneWay}"
                      x:Name="CartItemsControl">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Spacing="0"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="models:CartItem">
              <components:CartItemCard CartItem="{x:Bind}"
                                      IncreaseQuantityCommand="{Binding ViewModel.UpdateQuantityCommand, ElementName=PageRoot}"
                                      DecreaseQuantityCommand="{Binding ViewModel.UpdateQuantityCommand, ElementName=PageRoot}"
                                      RemoveItemCommand="{Binding ViewModel.RemoveItemCommand, ElementName=PageRoot}"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Empty State -->
        <Border x:Name="EmptyStateBorder"
                Background="White"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="20"
                BorderThickness="2"
                BorderBrush="#367419"
                Visibility="{x:Bind ViewModel.IsCartEmpty, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
          <StackPanel Spacing="16" HorizontalAlignment="Center">
            <Border Background="#E8F4E8"
                    CornerRadius="40"
                    Width="80"
                    Height="80"
                    HorizontalAlignment="Center">
              <FontIcon Glyph="&#xE7BF;"
                        FontSize="36"
                        Foreground="#367419"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="Giá» hÃ ng trá»‘ng"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#367419"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="HÃ£y thÃªm sáº£n pháº©m vÃ o giá» hÃ ng"
                       FontSize="14"
                       Foreground="#666"
                       HorizontalAlignment="Center"/>
            <Button Content="ðŸ›ï¸ Mua sáº¯m ngay"
                    Style="{StaticResource NoHoverPrimaryButtonStyle}"
                    Padding="24,12"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.ContinueShoppingCommand}"/>
          </StackPanel>
        </Border>
      </Grid>
    </ScrollViewer>

    <!-- Bottom Summary -->
    <Border Grid.Row="2"
            Background="White"
            Padding="16"
            BorderThickness="0,1,0,0"
            BorderBrush="#E8E8E8">
      <Grid RowDefinitions="Auto,Auto">
        
        <!-- Total Row -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,12">
          <StackPanel Grid.Column="0">
            <TextBlock Text="Tá»•ng cá»™ng"
                       FontSize="14"
                       Foreground="#666"/>
            <TextBlock Text="{x:Bind ViewModel.TotalItemsFormatted, Mode=OneWay}"
                       FontSize="12"
                       Foreground="#888"/>
          </StackPanel>
          <TextBlock Grid.Column="1"
                     Text="{x:Bind ViewModel.TotalPrice, Mode=OneWay, Converter={StaticResource PriceFormatConverter}}"
                     FontSize="24"
                     FontWeight="Bold"
                     Foreground="#367419"
                     VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Checkout Button -->
        <Button Grid.Row="1"
                Content="Thanh toÃ¡n"
                Style="{StaticResource NoHoverPrimaryButtonStyle}"
                Command="{x:Bind ViewModel.CheckoutCommand}"
                IsEnabled="{x:Bind ViewModel.HasCartItems, Mode=OneWay}"/>
      </Grid>
    </Border>

    <!-- Loading Overlay -->
    <components:LoadingIndicator Grid.RowSpan="3"
                                IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                Message="Äang táº£i..."/>
  </Grid>
</Page>
