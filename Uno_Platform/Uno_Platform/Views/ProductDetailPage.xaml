<Page x:Class="Uno_Platform.Views.ProductDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="using:Uno_Platform.Components"
      xmlns:converters="using:Uno_Platform.Converters"
      Background="#F5F5F5">
  
  <Page.Resources>
    <!-- Page Enter Animation -->
    <Storyboard x:Name="PageEnterAnimation">
      <DoubleAnimation Storyboard.TargetName="ContentGrid"
                      Storyboard.TargetProperty="Opacity"
                      From="0" To="1" Duration="0:0:0.4">
        <DoubleAnimation.EasingFunction>
          <CubicEase EasingMode="EaseOut"/>
        </DoubleAnimation.EasingFunction>
      </DoubleAnimation>
    </Storyboard>
    
    <!-- Image Fade In Animation -->
    <Storyboard x:Name="ImageFadeIn">
      <DoubleAnimation Storyboard.TargetName="ProductImage"
                      Storyboard.TargetProperty="Opacity"
                      From="0" To="1" Duration="0:0:0.6">
        <DoubleAnimation.EasingFunction>
          <CubicEase EasingMode="EaseOut"/>
        </DoubleAnimation.EasingFunction>
      </DoubleAnimation>
    </Storyboard>
  </Page.Resources>

  <Grid x:Name="ContentGrid" Opacity="0" Background="#F5F5F5">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <ScrollViewer Grid.Row="0" 
                  VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Disabled">
      <StackPanel>
        
        <!-- Image Section with Header -->
        <Grid Background="#F5F5F5" Padding="20,50,20,30">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          
          <!-- Header: Back + Favorite -->
          <Grid Grid.Row="0" Margin="0,0,0,20">
            <Button HorizontalAlignment="Left"
                    Style="{StaticResource NoHoverIconButtonStyle}"
                    Background="White"
                    Width="44" Height="44"
                    Command="{x:Bind ViewModel.GoBackCommand}">
              <FontIcon Glyph="&#xE72B;" FontSize="18" Foreground="#D68910"/>
            </Button>
            
            <Button HorizontalAlignment="Right"
                    Style="{StaticResource NoHoverIconButtonStyle}"
                    Background="White"
                    Width="44" Height="44">
              <FontIcon Glyph="&#xEB51;" FontSize="20" Foreground="#D68910"/>
            </Button>
          </Grid>
          
          <!-- Product Image -->
          <Grid Grid.Row="1" Height="300">
            <Image x:Name="ProductImage"
                   Source="{x:Bind ViewModel.Product.Image, Mode=OneWay}"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   MaxHeight="280"
                   Opacity="0"/>
            
            <!-- 360 Indicator -->
            <StackPanel VerticalAlignment="Bottom" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10">
              <Ellipse Width="180" Height="30" 
                       Fill="#E8E8E8" 
                       Opacity="0.6"/>
              <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0">
                <FontIcon Glyph="&#xE7AD;" FontSize="14" Foreground="#666"/>
                <TextBlock Text="360Â°" 
                           FontSize="12" 
                           Foreground="#666"
                           Margin="4,0,0,0"
                           VerticalAlignment="Center"/>
              </StackPanel>
            </StackPanel>
          </Grid>
        </Grid>

        <!-- Product Info Card -->
        <Border Background="White"
                CornerRadius="30,30,0,0"
                Padding="24,28,24,120"
                Margin="0,-20,0,0">
          <StackPanel Spacing="16">
            
            <!-- Name + Rating Row -->
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              
              <TextBlock Grid.Column="0"
                        Text="{x:Bind ViewModel.Product.Name, Mode=OneWay}"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#D68910"
                        TextWrapping="Wrap"/>
              
              <!-- Rating Badge -->
              <Border Grid.Column="1"
                      Background="#FFF8E7"
                      CornerRadius="8"
                      Padding="10,6"
                      VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Spacing="4">
                  <FontIcon Glyph="&#xE735;" FontSize="14" Foreground="#F5A623"/>
                  <TextBlock Text="4.8" 
                             FontSize="14" 
                             FontWeight="SemiBold"
                             Foreground="#F5A623"/>
                </StackPanel>
              </Border>
            </Grid>
            
            <!-- Category -->
            <TextBlock Text="{x:Bind ViewModel.Product.Category, Mode=OneWay}"
                      FontSize="14"
                      Foreground="#999"
                      Margin="0,-8,0,0"/>
            
            <!-- Description -->
            <TextBlock Text="{x:Bind ViewModel.Product.Description, Mode=OneWay}"
                      FontSize="14"
                      Foreground="#666"
                      LineHeight="22"
                      TextWrapping="Wrap"
                      Margin="0,8,0,0"/>
            
          </StackPanel>
        </Border>
        
      </StackPanel>
    </ScrollViewer>

    <!-- Bottom Add to Cart Button -->
    <Border Grid.Row="1"
            Background="White"
            Padding="24,16,24,34">
      <Button Command="{x:Bind ViewModel.AddToCartCommand}"
              Style="{StaticResource NoHoverPrimaryButtonStyle}"
              CornerRadius="30"
              Height="60"
              Padding="24,0">
        <Grid Width="280">
          <TextBlock Text="Add to Cart"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Foreground="White"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center"/>
          <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center">
            <Border Width="1" Height="20" Background="#5A7A7B" Margin="0,0,16,0"/>
            <TextBlock Text="{x:Bind ViewModel.Product.Price, Mode=OneWay, Converter={StaticResource PriceFormatConverter}}"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"/>
          </StackPanel>
        </Grid>
      </Button>
    </Border>

    <!-- Loading Overlay -->
    <components:LoadingIndicator Grid.RowSpan="2"
                                IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                Message="Loading..."/>
  </Grid>
</Page>
