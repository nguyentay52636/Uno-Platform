<Page x:Class="Uno_Platform.Views.ProductListPage"
      x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="using:Uno_Platform.Components"
      xmlns:models="using:Uno_Platform.Models"
      xmlns:converters="using:Uno_Platform.Converters"
      Background="#F5F5F5">
  
  <Page.Resources>
    <!-- Page Enter Animation -->
    <Storyboard x:Name="PageEnterAnimation">
      <DoubleAnimation Storyboard.TargetName="ContentGrid"
                      Storyboard.TargetProperty="Opacity"
                      From="0"
                      To="1"
                      Duration="0:0:0.3"/>
    </Storyboard>
  </Page.Resources>

  <Grid x:Name="ContentGrid" Opacity="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Filter Section - Modern Design -->
    <Border Grid.Row="0"
            Background="White"
            Padding="24"
            CornerRadius="0,0,16,16"
            BorderThickness="0,0,0,1"
            BorderBrush="#E8E8E8">
      <Border.Shadow>
        <ThemeShadow/>
      </Border.Shadow>
      <StackPanel Spacing="16">
        
        <!-- Header vá»›i Title -->
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          
          <TextBlock Text="ðŸ›ï¸ Danh sÃ¡ch sáº£n pháº©m"
                     FontSize="22"
                     FontWeight="Bold"
                     Foreground="#3D5A5B"
                     VerticalAlignment="Center"/>
          
          <!-- Results Badge -->
          <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
            <Border Background="#F0F7F7"
                    CornerRadius="12"
                    Padding="12,8"
                    BorderThickness="1"
                    BorderBrush="#3D5A5B">
              <TextBlock FontSize="14"
                         FontWeight="SemiBold"
                         Foreground="#3D5A5B">
                <Run Text="ðŸ“¦ "/>
                <Run Text="{x:Bind ViewModel.TotalItems, Mode=OneWay}"/>
                <Run Text=" sáº£n pháº©m"/>
              </TextBlock>
            </Border>
            <Border Background="#3D5A5B"
                    CornerRadius="12"
                    Padding="12,8">
              <TextBlock FontSize="14"
                         FontWeight="Bold"
                         Foreground="White">
                <Run Text="ðŸ“„ Trang "/>
                <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}"/>
                <Run Text=" / "/>
                <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}"/>
              </TextBlock>
            </Border>
          </StackPanel>
        </Grid>
        
        <!-- Categories -->
        <components:CategoriesPanel x:Name="CategoriesPanel"
                                    Categories="{x:Bind ViewModel.CategoriesWithCount, Mode=OneWay}"
                                    CategorySelected="CategoriesPanel_CategorySelected"/>

      </StackPanel>
    </Border>

    <!-- Products Display - Grid layout Ä‘Æ¡n giáº£n -->
    <ScrollViewer Grid.Row="1" 
                  Padding="20"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
      <Grid>
        <!-- Products Grid - Hiá»ƒn thá»‹ dáº¡ng grid vá»›i nhiá»u cá»™t -->
        <GridView ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
                  x:Name="ProductsItemsControl"
                  SelectionMode="None"
                  IsItemClickEnabled="False"
                  IncrementalLoadingThreshold="3"
                  IncrementalLoadingTrigger="Edge">
          <GridView.ItemContainerStyle>
            <Style TargetType="GridViewItem">
              <Setter Property="Margin" Value="0,0,20,20"/>
              <Setter Property="Padding" Value="0"/>
              <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
              <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            </Style>
          </GridView.ItemContainerStyle>
          <GridView.ItemTemplate>
            <DataTemplate x:DataType="models:Product">
              <Border Width="300"
                      Height="420"
                      Background="{StaticResource SurfaceBrush}"
                      CornerRadius="{StaticResource BorderRadiusLarge}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderBrush}"
                      Padding="0">
                <components:ProductCard Product="{x:Bind}"
                                     ViewDetailsCommand="{Binding ViewModel.NavigateToProductDetailCommand, ElementName=PageRoot}"
                                     AddToCartCommand="{Binding ViewModel.AddToCartCommand, ElementName=PageRoot}"/>
              </Border>
            </DataTemplate>
          </GridView.ItemTemplate>
        </GridView>

        <!-- Empty State - Modern Design -->
        <Border x:Name="EmptyStateBorder"
                Background="White"
                Padding="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="20"
                BorderThickness="2"
                BorderBrush="#3D5A5B"
                Visibility="{x:Bind ViewModel.HasNoProducts, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
          <StackPanel Spacing="20" HorizontalAlignment="Center">
            <Border Background="#F0F7F7"
                    CornerRadius="50"
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Center">
              <TextBlock Text="ðŸ”"
                         FontSize="50"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="KhÃ´ng tÃ¬m tháº¥y sáº£n pháº©m"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#3D5A5B"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Thá»­ tÃ¬m kiáº¿m vá»›i tá»« khÃ³a khÃ¡c"
                       FontSize="14"
                       Foreground="#666"
                       HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>
    </ScrollViewer>

    <!-- Pagination - Modern Design -->
    <Border Grid.Row="2"
            Background="White"
            Padding="20"
            CornerRadius="16,16,0,0"
            BorderThickness="0,1,0,0"
            BorderBrush="#E8E8E8">
      <Border.Shadow>
        <ThemeShadow/>
      </Border.Shadow>
      <components:Pagination x:Name="ProductPagination"
                             CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}"
                             TotalPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                             TotalItems="{x:Bind ViewModel.TotalItems, Mode=OneWay}"
                             PageSize="{x:Bind ViewModel.PageSize, Mode=OneWay}"
                             PageChanged="Pagination_PageChanged"/>
    </Border>

    <!-- Loading Overlay -->
    <components:LoadingIndicator Grid.RowSpan="3"
                                IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                Message="Äang táº£i sáº£n pháº©m..."/>
  </Grid>
</Page>
