<Page x:Class="Uno_Platform.Views.ProductListPage"
      x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="using:Uno_Platform.Components"
      xmlns:models="using:Uno_Platform.Models"
      xmlns:converters="using:Uno_Platform.Converters"
      Background="#F5F5F5">
  
  <Page.Resources>
    <!-- Page Enter Animation -->
    <Storyboard x:Name="PageEnterAnimation">
      <DoubleAnimation Storyboard.TargetName="ContentGrid"
                      Storyboard.TargetProperty="Opacity"
                      From="0"
                      To="1"
                      Duration="0:0:0.3"/>
    </Storyboard>
  </Page.Resources>

  <Grid x:Name="ContentGrid" Opacity="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Filter Section - ÄÆ¡n giáº£n -->
    <Border Grid.Row="0"
            Background="White"
            Padding="20"
            BorderThickness="0,0,0,1"
            BorderBrush="#E0E0E0">
      <StackPanel Spacing="15">
        
        <!-- Categories -->
        <StackPanel Spacing="10">
          <TextBlock Text="Categories"
                     Style="{StaticResource Heading3Style}"/>
          <ScrollViewer HorizontalScrollBarVisibility="Auto"
                       VerticalScrollBarVisibility="Disabled"
                       HorizontalScrollMode="Auto">
            <ItemsControl x:Name="CategoriesItemsControl" ItemsSource="{x:Bind ViewModel.CategoriesWithCount, Mode=OneWay}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <StackPanel Orientation="Horizontal" Spacing="10"/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:CategoryWithCount">
                  <Button Click="CategoryButton_Click"
                         Tag="{x:Bind Name}"
                         Style="{StaticResource CategoryButtonStyle}"
                         x:Name="CategoryBtn">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <TextBlock Text="{x:Bind Name, Mode=OneWay}" VerticalAlignment="Center"/>
                      <Border Background="{StaticResource SecondaryBrush}"
                             CornerRadius="10"
                             Padding="6,3"
                             MinWidth="24">
                        <TextBlock Text="{x:Bind Count, Mode=OneWay}"
                                 Foreground="White"
                                 FontSize="{StaticResource FontSizeTiny}"
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"/>
                      </Border>
                    </StackPanel>
                  </Button>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </StackPanel>

        <!-- Results Count -->
        <TextBlock FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#666">
          <Run Text="{x:Bind ViewModel.FilteredProducts.Count, Mode=OneWay}"/>
          <Run Text=" sáº£n pháº©m"/>
        </TextBlock>

      </StackPanel>
    </Border>

    <!-- Products Display - Grid layout Ä‘Æ¡n giáº£n -->
    <ScrollViewer Grid.Row="1" 
                  Padding="20"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
      <Grid>
        <!-- Products Grid - Hiá»ƒn thá»‹ dáº¡ng grid vá»›i nhiá»u cá»™t -->
        <GridView ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
                  x:Name="ProductsItemsControl"
                  SelectionMode="None"
                  IsItemClickEnabled="False"
                  IncrementalLoadingThreshold="3"
                  IncrementalLoadingTrigger="Edge">
          <GridView.ItemContainerStyle>
            <Style TargetType="GridViewItem">
              <Setter Property="Margin" Value="0,0,20,20"/>
              <Setter Property="Padding" Value="0"/>
              <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
              <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            </Style>
          </GridView.ItemContainerStyle>
          <GridView.ItemTemplate>
            <DataTemplate x:DataType="models:Product">
              <Border Width="300"
                      Height="420"
                      Background="{StaticResource SurfaceBrush}"
                      CornerRadius="{StaticResource BorderRadiusLarge}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderBrush}"
                      Padding="0">
                <components:ProductCard Product="{x:Bind}"
                                     ViewDetailsCommand="{Binding ViewModel.NavigateToProductDetailCommand, ElementName=PageRoot}"
                                     AddToCartCommand="{Binding ViewModel.AddToCartCommand, ElementName=PageRoot}"/>
              </Border>
            </DataTemplate>
          </GridView.ItemTemplate>
        </GridView>

        <!-- Empty State -->
        <Border x:Name="EmptyStateBorder"
                Background="White"
                Padding="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                Visibility="{x:Bind ViewModel.FilteredProducts.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverse}">
          <StackPanel Spacing="15" HorizontalAlignment="Center">
            <TextBlock Text="ðŸ”"
                       FontSize="60"
                       HorizontalAlignment="Center"
                       Opacity="0.5"/>
            <TextBlock Text="KhÃ´ng tÃ¬m tháº¥y sáº£n pháº©m"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>
    </ScrollViewer>

    <!-- Loading Overlay -->
    <components:LoadingIndicator Grid.Row="1"
                                IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                Message="Äang táº£i sáº£n pháº©m..."/>
  </Grid>
</Page>
