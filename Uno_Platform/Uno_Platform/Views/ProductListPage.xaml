<Page x:Class="Uno_Platform.Views.ProductListPage"
      x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="using:Uno_Platform.Components"
      xmlns:models="using:Uno_Platform.Models"
      xmlns:converters="using:Uno_Platform.Converters"
      Background="#F5F5F5">
  
  <Page.Resources>
    <!-- Page Enter Animation -->
    <Storyboard x:Name="PageEnterAnimation">
      <DoubleAnimation Storyboard.TargetName="ContentGrid"
                      Storyboard.TargetProperty="Opacity"
                      From="0"
                      To="1"
                      Duration="0:0:0.3"/>
    </Storyboard>
  </Page.Resources>

  <Grid x:Name="ContentGrid" Opacity="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Filter Section - Responsive Design -->
    <Border Grid.Row="0"
            Background="White"
            Padding="12,8,12,12"
            BorderThickness="0,0,0,1"
            BorderBrush="#E8E8E8">
      <StackPanel Spacing="10">
        
        <!-- Search Box -->
        <Border Background="#F8F9FA"
                CornerRadius="10"
                Padding="12,0"
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                HorizontalAlignment="Stretch"
                MaxWidth="600">
          <Grid ColumnDefinitions="Auto,*">
            <FontIcon Grid.Column="0"
                      Glyph="&#xE721;"
                      FontSize="16"
                      Foreground="#666"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>
            <TextBox Grid.Column="1"
                     x:Name="SearchTextBox"
                     PlaceholderText="Tìm kiếm sản phẩm..."
                     PlaceholderForeground="#666666"
                     Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     TextChanged="SearchTextBox_TextChanged"
                     BorderThickness="0"
                     Background="Transparent"
                     FontSize="14"
                     Foreground="#1A1A1A"
                     VerticalAlignment="Center"
                     MinHeight="36"/>
          </Grid>
        </Border>
        
        <!-- Categories -->
        <components:CategoriesPanel x:Name="CategoriesPanel"
                                    Categories="{x:Bind ViewModel.CategoriesWithCount, Mode=OneWay}"
                                    CategorySelected="CategoriesPanel_CategorySelected"/>

      </StackPanel>
    </Border>

    <!-- Products Display - Grid layout đơn giản -->
    <ScrollViewer Grid.Row="1" 
                  Padding="8"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
      <Grid>
        <!-- Products Grid -->
        <GridView ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
                  x:Name="ProductsItemsControl"
                  SelectionMode="None"
                  IsItemClickEnabled="False"
                  HorizontalAlignment="Stretch"
                  Padding="4">
          <GridView.ItemContainerStyle>
            <Style TargetType="GridViewItem">
              <Setter Property="Margin" Value="6"/>
              <Setter Property="Padding" Value="0"/>
              <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
              <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            </Style>
          </GridView.ItemContainerStyle>
          <GridView.ItemTemplate>
            <DataTemplate x:DataType="models:Product">
              <Border Width="170"
                      Height="320"
                      Background="{StaticResource SurfaceBrush}"
                      CornerRadius="12"
                      BorderThickness="1"
                      BorderBrush="{StaticResource BorderBrush}">
                <components:ProductCard Product="{x:Bind}"
                                     ViewDetailsCommand="{Binding ViewModel.NavigateToProductDetailCommand, ElementName=PageRoot}"
                                     AddToCartCommand="{Binding ViewModel.AddToCartCommand, ElementName=PageRoot}"/>
              </Border>
            </DataTemplate>
          </GridView.ItemTemplate>
        </GridView>

        <!-- Empty State - Modern Design -->
        <Border x:Name="EmptyStateBorder"
                Background="White"
                Padding="30,40"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="20"
                BorderThickness="2"
                BorderBrush="#367419"
                Visibility="{x:Bind ViewModel.HasNoProducts, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
          <StackPanel Spacing="16" HorizontalAlignment="Center">
            <Border Background="#E8F4E8"
                    CornerRadius="40"
                    Width="80"
                    Height="80"
                    HorizontalAlignment="Center">
              <SymbolIcon Symbol="Find"
                          Foreground="#367419"
                          RenderTransformOrigin="0.5,0.5">
                <SymbolIcon.RenderTransform>
                  <ScaleTransform ScaleX="2" ScaleY="2"/>
                </SymbolIcon.RenderTransform>
              </SymbolIcon>
            </Border>
            <TextBlock Text="Không tìm thấy sản phẩm"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#367419"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
            <TextBlock Text="Thử tìm kiếm với từ khóa khác"
                       FontSize="13"
                       Foreground="#666"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>
    </ScrollViewer>

    <!-- Loading Overlay -->
    <components:LoadingIndicator Grid.RowSpan="2"
                                IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                Message="Đang tải sản phẩm..."/>
  </Grid>
</Page>
